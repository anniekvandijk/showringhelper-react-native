{
  "name": "ShowringHelperReactNative",
  "displayName": "Showring helper",
  "expo": {
    "name": "Showring helper",
    "owner": "anniekvandijk",
    "description": "Showring helper app helps you and your customers to be ready for the showring",
    "slug": "showring-helper",
    "privacy": "unlisted",
    "sdkVersion": "35.0.0",
    "version": "0.20.0",
    "entryPoint": "node_modules/expo/AppEntry.js",
    "icon": "./images/icon.png",
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps"
        }
      ]
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#3e2723"
    },
    "splash": {
      "image": "./images/splashscreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "platforms": [
      "android",
      "ios"
    ],
    "android": {
      "package": "nl.animundo.android.showringhelper",
      "googleServicesFile": "./google-services.json",
      "versionCode": 20,
      "permissions": [
        "NOTIFICATIONS"
      ],
      "icon": "./images/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./images/icon_transparent.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "mdpi": "./images/splashscreen.png",
        "hdpi": "./images/splashscreen.png",   // scale 1.5x
        "xhdpi": "./images/splashscreen.png",  // scale 2x
        "xxhdpi": "./images/splashscreen.png", // scale 3x
        "xxxhdpi": "./images/splashscreen.png", // scale 4x
        "resizeMode": "native",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "bundleIdentifier": "nl.animundo.ios.showringhelper",
      "buildNumber": "0.20.0",
      "supportsTablet": true
    },
    "notification": {
      "icon": "./images/icon_96px_8bit_wit_transp.png",
      "color": "#e56228",
      "iosDisplayInForeground": true,
      "androidMode": "default"
    },
    "packagerOpts": {
      "sourceExts": [
        "js",
        "json",
        "ts",
        "tsx",
        "jsx"
      ]
    }
  }
}
